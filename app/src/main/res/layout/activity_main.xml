<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoapp5"
    tools:context=".activities.MainActivity"
    tools:ignore="ExtraText">


    <Button
        android:id="@+id/button_showG3"
        android:layout_width="172dp"
        android:layout_height="149dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="-5dp"
        android:background="@android:drawable/alert_dark_frame"
        android:rotationX="22"
        android:text="POSTRES FIT"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#EABE7C"
        android:textSize="20sp"
        android:textStyle="bold"
        app:backgroundTint="?android:attr/textColorPrimary"
        app:backgroundTintMode="multiply"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_showG"
        android:layout_width="172dp"
        android:layout_height="149dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="24dp"
        android:background="@android:drawable/dialog_frame"
        android:rotationY="22"
        android:text="RECETAS SALUDABLES Y FIT"
        android:textAlignment="center"
        android:textColor="#EABE7C"
        android:textSize="20sp"
        android:textStyle="bold"
        app:backgroundTint="?android:attr/textColorPrimary"
        app:backgroundTintMode="multiply"
        app:layout_constraintBottom_toTopOf="@+id/button_showG3"
        app:layout_constraintEnd_toStartOf="@+id/button_showG2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_showG2"
        android:layout_width="172dp"
        android:layout_height="149dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="150dp"
        android:background="@android:drawable/alert_dark_frame"
        android:rotationY="-22"
        android:text="RECETAS VEGANAS Y +"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#EABE7C"
        android:textSize="20sp"
        android:textStyle="bold"
        app:backgroundTint="?android:attr/textColorPrimary"
        app:backgroundTintMode="multiply"
        app:layout_constraintBottom_toTopOf="@+id/button_showG3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_showG"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>